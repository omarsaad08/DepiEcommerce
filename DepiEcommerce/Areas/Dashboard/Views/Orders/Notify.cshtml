@model RejectMessage


<div class="row">
	<div class="col-md-4">
		<form asp-action="Notify">
			<div asp-validation-summary="All" class="text-danger"></div>

			<!-- Hidden input for UserName using asp-for -->
			<input type="hidden" asp-for="UserName" />
			<input type="hidden" asp-for="OrderId" />

			<div class="form-group">


				<label asp-for="RejectMsg" class="control-label"></label>
				<textarea asp-for="RejectMsg" class="form-control"></textarea>
				<span asp-validation-for="RejectMsg" class="text-danger"></span>


			</div>

			<div class="form-group">
				<input type="submit" value="Send to @Model.UserName" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
