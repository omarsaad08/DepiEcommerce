@model Order

@{
	ViewData["Title"] = "Details";
}

<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Order Details</h1>


	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Order Details</h6>
		</div>
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.User)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.User.UserName)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Address)
				</dt>
				<dd class="col-sm-10">
					@Model.Address.AddresssLine @Model.Address.City @Model.Address.State - @Model.Address.PinCode

				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Amount)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Amount)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Status)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Status)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.CreatedAt)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.CreatedAt)
				</dd>
			</dl>

			<h4>Order Products</h4>


			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>

						<th>
							@Html.DisplayNameFor(model => model.orderProducts.FirstOrDefault().Product.Image)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.orderProducts.FirstOrDefault().Product.Name)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.orderProducts.FirstOrDefault().Product.Price)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.orderProducts.FirstOrDefault().Qty)
						</th>

					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.orderProducts)
					{
						<tr>

							<td>
								<img src="@item.Product.Image" width="200" />
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Product.Name)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.Price)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Qty)
							</td>


						</tr>
					}
				</tbody>
			</table>


			<div>
				<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
				<a asp-action="Index">Back to List</a>
			</div>
		</div>

	</div>
</div>