@model IEnumerable<Product>

@{
	ViewData["Title"] = "Index";
}
@section Styles {
	<link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}
<!-- Begin Page Content -->
<div class="container">
	<!-- Page Heading -->
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="h3 ">Products</h1>
		<a class="btn btn-primary" asp-action="Create">Add Product</a>
	</div>

	<!-- Product Cards -->
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-lg-4 col-md-6 mb-4">
				<div class="card product-card h-100">
					<img src="@item.Image" class="card-img-top product-image" alt="@item.Name">
					<div class="card-body product-body">
						<h5 class="card-title product-title">@item.Name</h5>
						<div class="product-description">
							@Html.Raw(item.Description.Replace("\n", "<br />"))
						</div>
						<div class="product-price">$@item.Price.ToString("N2")</div>
					</div>
					<div class="card-footer product-actions bg-transparent">
						<a asp-action="Edit" asp-route-id="@item.Id" class="text-primary">Edit</a>
						<a asp-action="Details" asp-route-id="@item.Id" class="text-info">Details</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
