@model Address

@{

	List<Address> addresses = ViewBag.Addresses;
}
@{
	ViewData["Title"] = "Check Out";
}
@section Styles {
	<link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/checkout.css" asp-append-version="true" />

}
<div class="container">

	<div class="row address">
		@foreach (var addres in addresses)

		{
			<div class="col-md-4 mb-2">
				<div class="card">
					<h5>@addres.User.FullName</h5>
					<p> @addres.AddresssLine, @addres.City @addres.State - @addres.PinCode </p>
					<a asp-controller="CheckOut" asp-action="Confirm" asp-route-addressId="@addres.Id"
						class="btn btn-primary">Deliver Here</a>
					<a asp-controller="CheckOut" asp-action="Delete" asp-route-addressId="@addres.Id"
						class="btn btn-danger">Delete</a>
				</div>
			</div>
		}

	</div>


	<form asp-action="Index">

		<div asp-validation-summary="All" class="text-danger"></div>

		<div class="form-group">

			<label asp-for="AddresssLine" class="control-label"></label>

			<input asp-for="AddresssLine" class="form-control" />

			<span asp-validation-for="AddresssLine" class="text-danger"></span>

		</div>

		<div class="form-group">

			<label asp-for="City" class="control-label"></label>

			<input asp-for="City" class="form-control" />


			<span asp-validation-for="City" class="text-danger"></span>

		</div>

		<div class="form-group">


			<label asp-for="State" class="control-label"></label>

			<input asp-for="State" class="form-control" />

			<span asp-validation-for="State" class="text-danger"></span>

		</div>

		<div class="form-group">

			<label asp-for="PinCode" class="control-label"></label>

			<input asp-for="PinCode" class="form-control" />

			<span asp-validation-for="PinCode" class="text-danger"></span>

		</div>

		<div class="form-group">

			<input type="submit" value="Create" class="btn btn-primary" />

		</div>
	</form>
