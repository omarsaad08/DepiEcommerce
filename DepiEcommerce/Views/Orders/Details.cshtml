@model Order
@section Styles {
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
}
<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-12">

                <!-- Order Summary Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="top-status mb-3">
                            <h5>ORDER# @Model.Id</h5>
                        </div>
                        <div class="mb-3">
                            <h5>Address:</h5>
                            <p>@Model.Address.AddresssLine @Model.Address.City @Model.Address.State -
                                @Model.Address.PinCode</p>
                        </div>
                        <div class="mb-3">
                            <h5>Order Amount:</h5>
                            <p>$@Model.Amount</p>
                        </div>
                        <div class="mb-0">
                            <h5>Status:</h5>
                            <p><span class="badge bg-success">@Model.Status</span></p>
                        </div>
                    </div>
                </div>

                <!-- Product Description Card -->
                <div class="card">
                    <div class="card-body p-0 table-responsive">
                        <h4 class="p-3 mb-0">Product Description</h4>
                        <table class="table mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Product Image</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Unit Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Example Product Row -->

                                @foreach (var i in Model.orderProducts)
                                {
                                    <tr>
                                        <td><img src="@i.Product.Image" alt="@i.Product.Name" class="img-fluid"></td>
                                        <td>@i.Product.Name</td>
                                        <td>$@i.Product.Price</td>
                                        <td>@i.Qty</td>
                                        <td>$@(@i.Product.Price* i.Qty)</td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
